[DEFAULT]
bantime  = 3600
findtime = 600
maxretry = 5
banaction = iptables-block
backend = systemd

[sshd]
enabled = true
port    = ssh
filter  = sshd-custom
logpath = /var/log/auth.log
maxretry = 5

[sshd-2m-tight]
enabled = true
port = ssh
filter = sshd-custom
logpath = /var/log/auth.log
maxretry = 3
findtime = 120
bantime = 7200

